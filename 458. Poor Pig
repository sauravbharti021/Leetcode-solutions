class Solution {
public:
    int poorPigs(int buckets, int minutesToDie, int minutesToTest) {
        
        if(buckets==1) return 0;
        int time= minutesToTest/minutesToDie +1 ;
        
        int b=buckets, cnt=0;
        int pigs=1;
        
        while(pow(time, pigs) < buckets){
            pigs++;
            
        }
        return pigs;
    }
};
