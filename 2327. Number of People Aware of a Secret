#define ll long long
#define mod 1000000007
class Solution {
public:
    int peopleAwareOfSecret(int n, int delay, int forget) {
        vector<int> fre(2*n + 2, 0);
        int ans = 0;
        fre[1]=1;
        for(int i=1;i<=n;i++){
            if(i-forget>=0){
                fre[i-forget] = 0;
            }
            for(int j=i+delay;j<(i+forget);j++){
                fre[j]= (fre[j] + fre[i])%mod;
            }
        }

        for(int i=0;i<=n;i++) {
            ans = (ans + fre[i])%mod;
        } 

        if(ans<0) ans+=mod;
        return ans;
    }
};
