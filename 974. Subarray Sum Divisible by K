class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int n= nums.size();
        map<int,int> m;
        int cnt=0;
        m[0]=1;
        int sum=0;
        for(int i=0;i<n;i++){
            sum+= nums[i];
            sum%= k;
            if(sum<0) sum+=k;
            if(m.find(sum)!=m.end()) cnt+= m[sum];Â 
            m[sum]+=1;
        }
        
        return cnt;
    }
};
