class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int n = colors.size();
        int ans = 0;
        for(int i=0;i<n;i++){
            int mx = neededTime[i], sum = neededTime[i], j = i + 1, cnt = 1;
            while(j<n && colors[j]==colors[i]){
                cnt+=1;
                sum+= neededTime[j];
                mx = max(mx, neededTime[j]);
                j+=1;
            }
            i = j-1;
            if(cnt>1){
                ans+= (sum - mx);
            }
        }
        return ans;
    }
};
