#define mod 1000000007
class Solution {
public:
    int numSub(string s) {
        int n = s.size();
        long long ans = 0;
        for(int i=0;i<n;i++){
            long long j = i, cnt = 0;
            while(j<n && s[j]=='1'){
                cnt+=1;
                j++;
            }
            ans = (ans+ (cnt*(cnt+1))/2)%mod;
            if(cnt>0) i= j-1;

        }

        return ans;
    }
};
