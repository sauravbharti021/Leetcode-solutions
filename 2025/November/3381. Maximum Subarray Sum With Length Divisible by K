#define ll long long
class Solution {
public:
    long long maxSubarraySum(vector<int>& nums, int k) {
        int n = nums.size();
        vector<ll> dp(n,-1e15), pre(n, 0);
        for(int i=0;i<n;i++){
            pre[i]= (i>0? pre[i-1] : 0) + nums[i];
        }
        ll mx = -1e18;
        for(int i=k-1;i<n;i++){
            int lastKIndex = i-k;
            ll curSum = pre[i];
            if(lastKIndex>=0){
                curSum-=pre[lastKIndex];
                dp[i] = dp[lastKIndex] + curSum;
            }
            dp[i] = max(dp[i], curSum);
            mx = max(mx,dp[i]);
        }

        return mx;
    }
};
