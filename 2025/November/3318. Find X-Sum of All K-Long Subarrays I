class Solution {
public:
    vector<int> findXSum(vector<int>& nums, int k, int x) {
        int n = nums.size();
        vector<int> fre(51, 0);
        vector<int> ans;

        for(int i=0;i<k-1;i++){
            fre[nums[i]]+=1;
        }
        for(int i=k-1;i<n;i++){
            if(i-k>=0){
                fre[nums[i-k]]-=1;
            }
            fre[nums[i]]+=1;
            vector<pair<int,int>> chk;
            for(int j=0;j<=50;j++){
                chk.push_back({fre[j], j});
            }
            sort(chk.begin(), chk.end(), greater<pair<int,int>>());
            int sum = 0;
            for(int j=0;j<min(x, (int)chk.size());j++){
                sum+= chk[j].second*chk[j].first;
            }
            ans.push_back(sum);
        }

        return ans;
    }
};
