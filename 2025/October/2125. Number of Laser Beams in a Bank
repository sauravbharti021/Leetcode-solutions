class Solution {
public:
    int numberOfBeams(vector<string>& bank) {
        vector<int> allDevices;
        for(int i=0;i<bank.size();i++){
            int cnt = 0;
            for(int j=0;j<bank[i].size();j++){
                if(bank[i][j]=='1'){
                    cnt+=1;
                }
            }
            if(cnt>0)
                allDevices.push_back(cnt);
        }
        int ans= 0;
        int size = allDevices.size();
        for(int i=0;i<size-1;i++){
            ans+= (allDevices[i]* allDevices[i+1]);
        }

        return ans;
    }
};
