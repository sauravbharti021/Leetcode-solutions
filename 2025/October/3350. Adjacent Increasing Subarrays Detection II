class Solution {
public:
    int maxIncreasingSubarrays(vector<int>& nums) {
        int n = nums.size();
        vector<int> pre(n, 0), suf(n, 0);
        for(int i=0;i<n;i++){
            if(i>0 && nums[i-1]<nums[i]){
                pre[i] = 1 + pre[i-1];
            }else{
                pre[i] = 1;
            }
        }

        for(int i=n-1;i>=0;i--){
            if(i+1<n && nums[i+1]>nums[i]){
                suf[i] = 1+ suf[i+1];
            }else{
                suf[i] = 1;
            }
        }
        int mx = 0;
        for(int i=1;i<n;i++){
            mx = max(mx, min(pre[i-1], suf[i]));
        }
        return mx;
    }
};
