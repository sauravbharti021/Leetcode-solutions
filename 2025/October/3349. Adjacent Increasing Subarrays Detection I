class Solution {
public:
    bool hasIncreasingSubarrays(vector<int>& nums, int k) {
        int n= nums.size();
        for(int i=0;i+2*k<=n;i++){
            int x1 = i, y1 = i+k -1;
            int x2 = i+k , y2 = i+2*k - 1;
            int flag1 = 0, flag2 = 0;
            for(int k=x1+1;k<=y1;k++){
                if(nums[k-1]>=nums[k]){
                    flag1 = 1;
                    break;
                }
            }

            for(int k=x2+1;k<=y2;k++){
                if(nums[k-1]>=nums[k]){
                    flag2 = 1;
                    break;
                }
            }

            if(!flag1 && !flag2) return true;
        }
        return false;
    }
};
