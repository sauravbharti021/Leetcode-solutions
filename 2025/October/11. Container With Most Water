class Solution {
public:
    int maxArea(vector<int>& height) {
        int n = height.size();
        int l = 0, r= n-1;
        int mx=0;
        while(r>=l){
            int minHeight = min(height[l], height[r]);
            mx = max(mx, minHeight*(r-l));
            if(height[l]<=height[r]) l++;
            else r--;
        }
        return mx;
    }
};
