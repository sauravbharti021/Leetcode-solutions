class Solution {
public:
    vector<string> removeAnagrams(vector<string>& words) {
        int n = words.size();
        vector<string> ans;
        for(int i=0;i<n;i++){
            int j=i+1;
            while(j<n && isAnagram(words[i], words[j])){
                j+=1;
            }
            ans.push_back(words[i]);
            i=j-1;
        }
        return ans;
    }
    bool isAnagram(string &a, string &b){
        vector<int> freA(26, 0), freB(26, 0);
        for(int i=0;i<a.size();i++) freA[a[i]-'a']+=1;
        for(int i=0;i<b.size();i++) freB[b[i]-'a']+=1;

        for(int i=0;i<26;i++) if(freA[i]!=freB[i]) return false;
        return true;
    }
};
