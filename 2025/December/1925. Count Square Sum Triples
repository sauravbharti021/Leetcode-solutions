class Solution {
public:
    int countTriples(int n) {
        int cnt = 0;
        for(int i=1;i<=n;i++){
            for(int j=i-1;j>0;j--){
                int c= (i*i) - (j*j);
                if(ceil(sqrt(c))==floor(sqrt(c))){
                    int realC = sqrt(c);
                    if(realC>0 && realC<i && realC!=i && realC!=j){
                        cnt+=1;
                    }
                }
            }
        }

        return cnt;
    }
};
