class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int sum = 0, n = nums.size();
        vector<int> pre(n, 0);
        for(int i=0;i<n;i++){
            pre[i] += (i>0 ? pre[i-1] : 0);
            pre[i]+= nums[i];
        }

        int ans = 0;
        for(int i=0;i<n-1;i++){
            int leftSum = pre[i];
            int rightSum = pre[n-1] - (pre[i]);
            if(abs(leftSum-rightSum)%2==0) ans+=1;
        }

        return ans;
    }
};
