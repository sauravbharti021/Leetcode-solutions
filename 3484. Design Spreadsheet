class Spreadsheet {
public:
    map<string, int> m;
    Spreadsheet(int rows) {
        
    }
    
    void setCell(string cell, int value) {
        m[cell] = value;
    }
    
    void resetCell(string cell) {
        m[cell] = 0;
    }
    
    int getValue(string formula) {
        string first = "", second = "";
        int j=1,n = formula.size();
        while(j<n && formula[j]!='+'){
            first+= formula[j];
            j+=1;
        }
        j+=1;
        while(j<n){
            second+= formula[j];
            j+=1;
        }

        int fp = 0, sp=0;
        if(isalpha(first[0])){
            fp = m[first];
        }else{
            fp = stoi(first);
        }

        if(isalpha(second[0])){
            sp = m[second];
        }else{
            sp = stoi(second);
        }

        return fp + sp;
    }
};
